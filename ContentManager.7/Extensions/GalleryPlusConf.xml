<?xml version='1.0' encoding='utf-8' ?>
<gpdefvalues>

	<!--

		Per ogni parametro:

			id:	id del parametro (autoesplicativo)
			value:	valore di defualt associato 

	-->
	
<!--   GALLERIE -->
	
	<!-- Visualizzare la galleria: true/false	-->
	<gpdefvalue id='GalleryShow'	value='true'	 />	
	
	
<!--  ALBUM  -->
	
	<!-- 
		Mod di visualizzazione: 
		0: Elenco Miniature; 
		1: Immagine singola, paginazione numerica; 
		2: Immagine singola, paginazione per titolo immagine
	-->
	<gpdefvalue id='AlbumViewMode'	value='0'	 />	
	
	<!-- Dim max larghezza singola immagine  (int)	-->
	<gpdefvalue id='AlbumImgMaxW'	value='360'	 />	
	
	<!-- Dim max altezza singola immagine (int)	-->
	<gpdefvalue id='AlbumImgMaxH'	value='270'	 />	
	
	<!-- Dim max larghezza singola miniatura  (int)	-->
	<gpdefvalue id='AlbumThumbMaxW'	value='120'	 />	
	
	<!-- Dim max altezza singola miniatura (int)	-->
	<gpdefvalue id='AlbumThumbMaxH'	value='90'	 />	
	
	<!-- Num miniature per pagina (int)	-->
	<gpdefvalue id='AlbumThumbXPage'	value='12'	 />	
	
	<!-- Visualizzare l'album: true/false	-->
	<gpdefvalue id='AlbumShow'	value='true'	 />	
	
<!-- OGGETTO ELENCO GALLERIE -->
	
	<!-- Oggetto Elenco Gallerie: dim max larghezza singola miniatura  (int)	-->
	<gpdefvalue id='ObjGalleryListThumbMaxW'	value='40'	 />	
	
	<!-- Oggetto Elenco Gallerie: dim max altezza singola miniatura (int)	-->
	<gpdefvalue id='ObjGalleryListThumbMaxH'	value='30'	 />		

<!-- OGGETTO ELENCO ALBUM -->
	
	<!-- Oggetto Elenco Album: dim max larghezza singola miniatura  (int)	-->
	<gpdefvalue id='ObjAlbumListThumbMaxW'	value='40'	 />	
	
	<!-- Oggetto Elenco Album: dim max altezza singola miniatura (int)	-->
	<gpdefvalue id='ObjAlbumListThumbMaxH'	value='30'	 />	
	
</gpdefvalues>